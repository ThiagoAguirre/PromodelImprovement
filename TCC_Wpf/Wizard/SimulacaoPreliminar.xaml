<Page x:Class="TCC_Wpf.Wizard.SimulacaoPreliminar"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="PrimeiraSimul">

    <Grid>
        <Label Content="Simulação inicial" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="18.667" Margin="0,-6,0,0"/>
        <ProgressBar x:Name="pgbProgresso" Height="10" VerticalAlignment="Top" Margin="10,197,10,0" IsIndeterminate="True"/>
        <TextBlock x:Name="textBlock" TextWrapping="Wrap" VerticalAlignment="Top" Margin="10,35,10,0"><Run Text="Aguarde, o software está realizando uma simulação preliminar."/><LineBreak/><Run Text="Estão sendo reconhecidos os locais, entidades, e demais recusoso"/><Run Text=". "/><LineBreak/></TextBlock>
        <TextBlock x:Name="txtMensagem" TextWrapping="Wrap" VerticalAlignment="Top" Margin="10,212,10,0" Height="32"><Run Text=""/></TextBlock>
        <Label x:Name="lblAguarde" Content="Por favor, aguarde." HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,136,0,0" FontSize="18.667"/>
    </Grid>
</Page>
